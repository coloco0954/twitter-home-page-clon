<aside class="hidden md:block w-[400px]">
    <div class="">
        <div class="bg-[#212227] mt-1 rounded-full mr-7 w-[260px] ml-5 flex py-2">
            <img src="/img/src/search-gray.svg" alt="" class="w-5 ml-3 mt-1 mb-1">
            <input type="text" class="w-48 ml-3 h-7 bg-transparent -mt-[0.5px] placeholder:text-zinc-500 focus:outline-none text-white" autocomplete="off" placeholder="Buscar">
